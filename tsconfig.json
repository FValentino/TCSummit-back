{
  "compilerOptions": {
    // Carpetas
    "rootDir": "./src",
    "outDir": "./dist",

    // JS moderno para Node
    "module": "nodenext",
    "target": "esnext",

    // Tipos
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,

    // Mapas y declaraciones
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Estricto
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

